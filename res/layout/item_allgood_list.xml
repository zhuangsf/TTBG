    <TextView android:text="(第50106云)红米4 16G 全网通 标准版 4G手机 只要一元啦" android:textSize="@dimen/text_little" android:textColor="@color/text_title" android:ellipsize="end" android:id="@+id/tv_allgood_name_list" android:paddingRight="@dimen/padding_normal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/padding_normal" android:maxLines="2" android:lines="2" android:layout_toRightOf="@id/iv_allgood_pic_list" android:layout_alignTop="@id/iv_allgood_pic_list" />
