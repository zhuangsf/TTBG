    <LinearLayout android:orientation="vertical" android:id="@+id/ll_allgood_add_list" android:paddingLeft="@dimen/padding_normal" android:paddingTop="@dimen/padding_normal" android:paddingRight="@dimen/padding_normal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/tv_allgood_name_list" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/riv_allgood_add_list" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/add_to_cart" android:scaleType="fitCenter" />
    </LinearLayout>

   <ProgressBar
       android:id="@+id/pb_participation"
       style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="4.0dip"
        android:layout_alignLeft="@id/tv_allgood_name_list"
        android:layout_below="@id/tv_allgood_price_list"
        android:layout_marginRight="@dimen/allgoods_goods_list_process_margin_top"
        android:layout_toLeftOf="@id/ll_allgood_add_list"
