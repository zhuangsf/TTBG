<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="@dimen/stroke" android:color="@color/stroke" />
        </shape>
    </item>
    <item android:top="@dimen/stroke">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item android:left="@dimen/padding_large" android:top="@dimen/padding_normal" android:right="@dimen/padding_large" android:bottom="@dimen/padding_normal">
        <selector>
            <item android:state_enabled="true" android:state_pressed="false">
                <shape>
                    <solid android:color="@color/theme" />
                    <corners android:radius="@dimen/corner_radiu_large" />
                    <size android:height="@dimen/button_height_middle" />
                </shape>
            </item>
            <item android:state_enabled="true" android:state_pressed="true">
                <shape>
                    <solid android:color="@color/theme_dim" />
                    <corners android:radius="@dimen/corner_radiu_large" />
                    <size android:height="@dimen/button_height_middle" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="@color/theme_enable" />
                    <corners android:radius="@dimen/corner_radiu_large" />
                    <size android:height="@dimen/button_height_middle" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>