<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/stroke" android:color="@color/background_btn_press" />
            <corners android:radius="99.0dip" />
            <solid android:color="@color/background_btn_press" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/stroke" android:color="@color/background_btn_press" />
            <corners android:radius="99.0dip" />
        </shape>
    </item>
</selector>