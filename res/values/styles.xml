<resources>
    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    
            <!-- 选择照片底部弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
 	</style>
    
    <style name="AppStartTheme" parent="android:style/Theme.Holo.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">false</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="RadioButton_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tv_main_text_color_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ImageView">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/iv_middle</item>
        <item name="android:layout_height">@dimen/iv_middle</item>
        <item name="android:src">@drawable/goods_pic_default</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ImageView.Large" parent="@style/ImageView">
        <item name="android:layout_width">@dimen/iv_large</item>
        <item name="android:layout_height">@dimen/iv_large</item>
        <item name="android:src">@drawable/goods_pic_default</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="TextView.GoodsName" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_title</item>
    </style>
        <style name="TextView.GoodsTime" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_little</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="TextView">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="EditText">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="EditText.Setting" parent="@style/EditText">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:layout_marginTop">@dimen/padding_xxlarge</item>
    </style>
    <style name="TextView.Limit" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_mircro</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/background_limit_shopping</item>
        <item name="android:paddingLeft">@dimen/text_leading</item>
        <item name="android:paddingRight">@dimen/text_leading</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/limit_shopping</item>
    </style>

    <style name="MMTabButton">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
    </style>
        <style name="TextView.Button" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">center</item>
    </style>
        <style name="TextView.MenuUserEpl" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">left|center</item>
    </style>
        <style name="TextView.MenuItem" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">@dimen/padding_normal</item>
    </style>
            <style name="TextView.MenuUserName" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">left|center</item>
    </style>
    <style name="TextView.Button.White" parent="@style/TextView.Button">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextView.AccountDegree" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_little</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextView.MenuTips" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">16.0dip</item>
    </style>
    <style name="TextView.AccountName" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_middle</item>
        <item name="android:textColor">@color/white</item>
    </style>
<style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
<item name="android:background">#00000000</item> <!-- 设置自定义布局的背景透明 -->
<item name="android:windowBackground">@android:color/transparent</item>  <!-- 设置window背景透明，也就是去边框 -->
<item name="android:backgroundDimEnabled">true</item>
<item name="android:backgroundDimAmount">0.6</item>
</style>
</resources>