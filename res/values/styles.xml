<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="RadioButton_Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tv_main_text_color_selector</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">10sp</item>
    </style>    
    <style name="ImageView">
        <item name="android:background">@null</item>
        <item name="android:layout_width">@dimen/iv_middle</item>
        <item name="android:layout_height">@dimen/iv_middle</item>
        <item name="android:src">@drawable/goods_pic_default</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="ImageView.Large" parent="@style/ImageView">
        <item name="android:layout_width">@dimen/iv_large</item>
        <item name="android:layout_height">@dimen/iv_large</item>
        <item name="android:src">@drawable/goods_pic_default</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    
    
    <style name="TextView">
        <item name="android:background">@android:color/transparent</item>
    </style>    
    <style name="TextView.Limit" parent="@style/TextView">
        <item name="android:textSize">@dimen/text_mircro</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/background_limit_shopping</item>
        <item name="android:paddingLeft">@dimen/text_leading</item>
        <item name="android:paddingRight">@dimen/text_leading</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/limit_shopping</item>
    </style>    
    
    
      <style name="MMTabButton">
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:gravity">center_horizontal</item>
		<item name="android:background">@color/white</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:button">@null</item>
		<item name="android:textColor">@color/text_gray</item>
		<item name="android:layout_weight">1.0</item>
		<item name="android:paddingBottom">2.0dip</item>
		<item name="android:paddingTop">2.0dip</item>
	</style>  
</resources>
